
easyblock = 'Conda'

name = 'prefect'
version = '1.2.1'

homepage = 'https://www.prefect.io/'
description = "The easiest way to build, run, and monitor data pipelines at scale"
toolchain = SYSTEM
builddependencies = [('Miniconda3', '4.12.0')]

environment_file = "%(namelower)s-%(version)s.yml"
sources = ["%(namelower)s-%(version)s.yml"]
sanity_check_commands = ['python --version']

moduleclass = 'tools'